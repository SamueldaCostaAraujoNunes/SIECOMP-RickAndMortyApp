<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/charactersFragment">

    <fragment
        android:id="@+id/charactersFragment"
        android:name="br.com.samuelnunes.rickandmorty.ui.characters.CharactersFragment"
        android:label="Personagens"
        tools:layout="@layout/characters_fragment">
        <action
            android:id="@+id/action_charactersFragment_to_characterDetailFragment"
            app:destination="@id/characterDetailFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>
    <fragment
        android:id="@+id/characterDetailFragment"
        android:name="br.com.samuelnunes.rickandmorty.ui.characterdetail.CharacterDetailFragment"
        android:label="Detalhes dos Personagens"
        tools:layout="@layout/character_detail_fragment">
        <argument
            android:name="characterId"
            app:argType="integer" />
    </fragment>
</navigation>